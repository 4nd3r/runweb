{
    "name": "runweb",
    "version": "1.6.1",
    "description": "Run website like an app.",
    "author": "Ander Punnar <ander@kvlt.ee>",
    "license": "WTFPL",
    "main": "main.js",
    "scripts": {
        "start": "electron --no-sandbox .",
        "prettier": "prettier --write *.js",
        "mkdeb": "electron-builder build --linux deb"
    },
    "dependencies": {
        "electron-context-menu": "^2"
    },
    "devDependencies": {
        "electron": "^11",
        "electron-builder": "^22",
        "prettier": "^2"
    },
    "build": {
        "directories": {
            "buildResources": "./"
        },
        "linux": {
            "category": "Utility"
        },
        "deb": {
            "afterInstall": "build-deb-postinst.sh",
            "afterRemove": "build-deb-postrm.sh"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "none"
    }
}
